# 数据库配置 (用于 ingest.py)
DB_HOST=127.0.0.1
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password_here
DB_NAME=uniticketAI

# Ollama 配置
OLLAMA_MODEL=mxbai-embed-large
OLLAMA_BASE_URL=http://localhost:11434

# 向量库版本管理
INDEX_VERSION=1.0.0
INDEX_ROOT_DIR=vector_indexes
KEEP_HISTORY=true
MAX_HISTORY_COUNT=5

# FastAPI 服务配置
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8000
FASTAPI_RELOAD=false

# 日志配置 (text 或 json)
LOG_LEVEL=INFO
LOG_FORMAT=text

# 向量索引加载配置
USE_LATEST_INDEX=true
INDEX_PATH=  # 留空使用 latest 或最新索引

# DeepSeek LLM 配置
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_API_BASE=https://api.deepseek.com/v1
DEEPSEEK_MODEL=deepseek-chat
DEEPSEEK_TEMPERATURE=0

# RAG 配置
DEFAULT_TOP_K=5
MAX_TOP_K=20

# 系统提示词 (可选)
# SYSTEM_PROMPT=你是 UniTicket 助手...
